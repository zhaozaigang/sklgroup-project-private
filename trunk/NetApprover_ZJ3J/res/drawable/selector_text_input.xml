<?xml version="1.0" encoding="UTF-8"?>
<selector 
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false">
    	<shape>
	   		<solid android:color="#F6FCFF"/>
	   		<corners android:radius="2dp"/>
		 	<stroke android:width="1dp" android:color="#ECF3F6"/>
		</shape>
    </item>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false">
    	<shape>
	   		<solid android:color="#F6FCFF"/>
	   		<corners android:radius="2dp"/>
		 	<stroke android:width="1dp" android:color="#99B4D1"/>
		</shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
    	<shape>
	   		<solid android:color="#F6FCFF"/>
	   		<corners android:radius="2dp"/>
		 	<stroke android:width="1dp" android:color="#99B4D1"/>
		</shape>
    </item>
    <item android:state_pressed="true" >
  		 <shape>
	   		<solid android:color="#F6FCFF"/>
	   		<corners android:radius="2dp"/>
		 	<stroke android:width="1dp" android:color="#99B4D1"/>
		</shape>
    </item>
</selector>