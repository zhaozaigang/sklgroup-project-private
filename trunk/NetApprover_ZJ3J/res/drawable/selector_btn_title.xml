	        android:color="#ffffff" 
	        /> 
	 		<corners android:radius="8dp"/>
			<padding  
		        android:left="10dp"  
		        android:top="5dp"  
		        android:right="10dp"  
		        android:bottom="5dp" />  
	 </shape> 
   </item>
